<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/device_list_item"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:background="#B3CA6F"
        android:padding="5dp" >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/DeviceName_DevicePairing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="Searched device name : "
            android:textSize="13sp"
            android:textStyle="bold"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/DeviceAddress_DevicePairing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Searched device address : "
            android:textSize="13sp"
            android:textStyle="bold"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/DeviceRssi_DevicePairing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Searched device rssi : "
            android:textSize="13sp"
            android:textStyle="bold"
            android:typeface="monospace" />
    </LinearLayout>




    </LinearLayout>
</LinearLayout>